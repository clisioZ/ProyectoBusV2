<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#fde767"
        android:backgroundTint="#fde767"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:src="@drawable/user"
            >
            <ImageView
                android:id="@+id/user"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:src="@drawable/user"
                android:layout_marginLeft="10dp"
                >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Kendrick Lamar"
                android:textSize="24sp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/agendar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:textColor="#FDE767" />

        <Button
            android:id="@+id/button2"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#fde767" />

        <Button
            android:id="@+id/button"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="Horarios"
            android:textColor="#fde767" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="335dp"
            android:src="@drawable/retornar"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="#fde767"
        android:backgroundTint="#fde767"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:text="Derechos Reservados CUValles"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            android:textColorHighlight="#121111"
            android:textColorHint="#0E0E0E"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fde767"
        android:backgroundTint="#fde767"
        >

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bootle"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:padding="7dp"
                android:src="@drawable/bootle"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:layout_margin="10dp"
                android:src="@drawable/home"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/book"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/book"
                android:layout_margin="10dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


